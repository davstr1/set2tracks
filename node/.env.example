# Application Environment
ENV=dev
NODE_ENV=development
PORT=8080

# Database Configuration (Primary)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=set2tracks
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Database Configuration (Secondary/Replica - Optional)
DB_HOST2=localhost
DB_PORT2=5432
DB_NAME2=set2tracks_replica
DB_USERNAME2=your_username
DB_PASSWORD2=your_password

# Application Security
SECRET_KEY=your_secret_key_here_min_32_chars
SESSION_SECRET=your_session_secret_here

# Database Tables
DB_TABLE_USERS=user
DB_TABLE_INVITES=invite

# Password Security
PWD_SALT_LENGTH=29
PWD_HASH_METHOD=pbkdf2:sha256

# Mail Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:8080/auth/google/callback

# Spotify API
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIPY_REDIRECT_URI=http://localhost:8080/spotify/callback

# Apple Music API
APPLE_KEY_ID=your_apple_key_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_PRIVATE_KEY=your_apple_private_key
APPLE_TOKEN_EXPIRY_LENGTH=15552000

# Music Recognition Configuration
# Option 1: AcrCloud (Recommended - https://www.acrcloud.com/)
# Sign up for free at https://console.acrcloud.com/
ACRCLOUD_HOST=identify-us-west-2.acrcloud.com
ACRCLOUD_ACCESS_KEY=your_acrcloud_access_key
ACRCLOUD_ACCESS_SECRET=your_acrcloud_access_secret

# Option 2: AudD.io (Alternative - https://audd.io/)
AUDD_API_TOKEN=your_audd_api_token

# Recognition Settings
RECOGNITION_MAX_RETRIES=3
RECOGNITION_RETRY_DELAY=1000
RECOGNITION_MAX_CONCURRENT=10

# Legacy Shazam Config (if using proxy)
SHAZAM_PROXY_URL=your_proxy_url_if_needed

# Proxy Configuration (Optional)
PROXY_URL_SOCKS5=
PROXY_URL_HTTP=

# Audio Processing
AUDIO_SEGMENTS_LENGTH=10

# Admin Configuration
ADMIN_UID=1

# Logging
LOG_LEVEL=info
LOGGING_CONFIG_FILE=./config/logging.json

# Redis Configuration (for Bull queue and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application URLs
BASE_URL=http://localhost:8080

# File Upload
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
MAX_FILE_SIZE=104857600

# Signup Options
SIGNUP_ALLOW_SITE=true
SIGNUP_ALLOW_GOOGLE=true
SIGNUP_ALLOW_INVITE=true
